<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2D43BF"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="30dp"
    tools:context=".ParkCarActivity">

    <EditText
        android:id="@+id/driver_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundsignup"
        android:hint="Driver Name"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/number_plate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/backgroundsignup"
        android:hint="Number Plate"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/driver_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundsignup"
        android:hint="Driver Number(Optional)"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/vehicle_Type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundsignup"
        android:hint="Vehicle Type"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundsignup"
        android:hint="Amount"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_password2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundsignup"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"/>



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/parkBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#9C27B0"
        android:text="Park"
        android:textColor="@color/white"
        android:textSize="14sp"/>



</LinearLayout>